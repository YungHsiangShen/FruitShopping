<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]後台管理</title>
	<link href="~/lib/admin/startbootstrap-sb-admin-gh-pages/css/styles.min.css" rel="stylesheet"/>
	@await RenderSectionAsync("Styles", required:false)
</head>
<body>
	<nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
		<!-- Navbar Brand-->
		<a class="navbar-brand ps-3" href="index.html">FruitShopping</a>
		<!-- Sidebar Toggle-->
		<button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
		<!-- Navbar Search-->
		<form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
			<div class="input-group">
				<input class="form-control" type="text" placeholder="請輸入內容..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
				<button class="btn btn-secondary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
			</div>
		</form>
		<!-- Navbar-->
		<ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
			<li class="nav-item dropdown">
				<a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
				<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
					@* <li><a class="dropdown-item" href="#!">Settings</a></li>
					<li><a class="dropdown-item" href="#!">Activity Log</a></li>
					<li><hr class="dropdown-divider" /></li> *@
					<li>
						<a class="dropdown-item d-flex justify-content-between" href="#!">
							登出<img src="~/lib/admin/startbootstrap-sb-admin-gh-pages/icon/icons8-export-32.png" />
						</a>
					</li>
				</ul>
			</li>
		</ul>
	</nav>
	<div id="layoutSidenav" class="row-cols-2">
		<div id="layoutSidenav_nav" class="col-2 col-lg-2 ">
			<nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
				<div class="sb-sidenav-menu">
					<div class="nav">
						@* <div class="sb-sidenav-menu-heading">Core</div> *@
						<div>
							<a class="nav-link mt-3" asp-area="Admin" asp-controller="" asp-action="">
								<div class="sb-nav-link-icon">
									<img src="~/lib/admin/startbootstrap-sb-admin-gh-pages/icon/icons8-users-32.png" />
								</div>
								後端管理角色
							</a>
						</div>
						<div>
							<a class="nav-link mt-3" asp-area="Admin" asp-controller="" asp-action="">
								<div class="sb-nav-link-icon">
									<img src="~/lib/admin/startbootstrap-sb-admin-gh-pages/icon/icons8-product-32.png" />
								</div>
								商品管理
							</a>
						</div>
						<div>
							<a class="nav-link mt-3" asp-area="Admin" asp-controller="" asp-action="">
								<div class="sb-nav-link-icon">
									<img src="~/lib/admin/startbootstrap-sb-admin-gh-pages/icon/icons8-order-32.png" />
								</div>
								訂單管理
							</a>
						</div>
						<div>
							<a class="nav-link mt-3" asp-area="Admin" asp-controller="" asp-action="">
								<div class="sb-nav-link-icon">
									<img src="~/lib/admin/startbootstrap-sb-admin-gh-pages/icon/icons8-chart-32.png" />
								</div>
								銷售分析
							</a>
						</div>
						<div>
							<a class="nav-link mt-3" asp-area="Admin" asp-controller="" asp-action="">
								<div class="sb-nav-link-icon">
									<img src="~/lib/admin/startbootstrap-sb-admin-gh-pages/icon/icons8-article-32.png" />
								</div>
								官網修改
							</a>
						</div>
					</div>
				</div>
			</nav>
		</div>
		<div id="layoutSidenav_content">
			<div>
				<main class="pb-3">
					@RenderBody()
				</main>
			</div>
			<footer class="py-4 bg-light mt-auto w-100">
				<div class="container-fluid px-4">
					<div class="d-flex align-items-center justify-content-between small">
						<div class="text-muted">Copyright &copy; Your Website 2023</div>
						<div>
							<a href="#">Privacy Policy</a>
							&middot;
							<a href="#">Terms &amp; Conditions</a>
						</div>
					</div>
				</div>
			</footer>
		</div>
	</div>

	<script src="~/lib/admin/startbootstrap-sb-admin-gh-pages/js/datatables-simple-demo.min.js"></script>
	<script src="~/lib/admin/startbootstrap-sb-admin-gh-pages/js/scripts.min.js"></script>
	<script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
